            <RadialGradient centerX="0.5165745856353591" centerY="0.5379146919431279" focusDistance="-0.02298850574712641" radius="0.7126436781609196">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </fill>
         <font>
            <Font name="Arial" size="16.0" />
