            <Font name="Arial Bold" size="12.0" />
         </font>
         <fill>
            <LinearGradient endX="1.0" endY="0.3175355450236967" startX="1.0" startY="0.6966824644549763">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
      </Text>
        <Button fx:id="Tutorial" onAction="#switchToTutorial" text="Ir al tutorial" textFill="#2200ff">
         <font>
            <Font name="Arial" size="12.0" />
         </font></Button>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Seleccione el tamaño del mapa que quiere jugar:">
